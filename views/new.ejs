<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>

<form action="/blogs" method="POST" class="ui form">
    <div class="ui field">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" placeholder="Blog Title">
    </div>
    <div class="ui field">
            <label for="image">Image</label>
            <input type="text" id="image" name="image" placeholder="Blog Image Link">
    </div>
    <div class="ui field">
        <label for="body">Blog Content</label>
        <textarea id="body" name="body" id="" cols="30" rows="10" placeholder="Blog content goes here..."></textarea>
    </div>    
    <input type="submit" class="ui inverted primary big button" value="Submit">
</form>
</div>
<% include partials/footer %>