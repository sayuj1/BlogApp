<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>

<form action="/blogs/<%= blog._id%>?_method=PUT" method="POST" class="ui form">  <!-- method override package is need for put request bcz html form does not support it-->
    <div class="ui field">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= blog.title %>">
    </div>
    <div class="ui field">
            <label for="image">Image</label>
            <input type="text" id="image" name="image" value="<%= blog.image %>">
    </div>
    <div class="ui field">
        <label for="body">Blog Content</label>
        <textarea id="body" name="body" id="" cols="30" rows="10"><%= blog.body %></textarea>
    </div>    
    <input type="submit" class="ui inverted primary big button" value="Edit">
</form>
</div>
<% include partials/footer %>